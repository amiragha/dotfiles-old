# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#36E592"
    color_degraded = "#CE9726"
    color_bad = "#CE4B4F"
    color_separator = "#B3BEFF"    
    interval = 1
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "time"
order += "volume master"

ipv6 {
  format_up = " %ip"
  format_down = "IPv6 " 
}
wireless _first_ {
format_up = " %quality %essid  %ip"
format_down = " "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
format_up = "  %ip %speed"
format_down = " "
}

battery all {
  format = "%status %percentage %remaining"
  format_down = ""
  status_chr = ""
  status_bat = ""
  status_unk = ""
  status_full = ""
  low_threshold = 20
}    

time {
  format = " %a, %d %b %H:%M:%S"
}

volume master {
  format = " %volume"
  format_muted = " %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

load {
    format = " %1min"
}

cpu_usage {
    format = " %usage"
}

disk "/" {
    format = "\\ %percentage_avail"
    low_threshold = 5
}

disk "/home" {
    format = "\\home %percentage_avail"
    low_threshold = 2
}
